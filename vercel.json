{
    "version": 2,
    "builds": [
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "controller.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)", 
        "dest": "controller.js"
      },
      {
        "src": "/(.*)",      
        "dest": "/public/$1"
      }
    ]
  }
  